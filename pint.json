{
    "preset": "laravel",
    "rules": {
        "strict_param": true,
        "declare_strict_types": true,
        "array_syntax": {
            "syntax": "short"
        },
        "binary_operator_spaces": {
            "default": "single_space"
        },
        "ordered_imports": true,
        "single_quote": true
    },
    "exclude": [
        "vendor",
        "storage",
        "bootstrap/cache"
    ]
}
